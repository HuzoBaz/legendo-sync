# LEGENDO SYNC Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Port for the server to listen on
PORT=3000

# Host address to bind to (0.0.0.0 for all interfaces)
HOST=0.0.0.0

# Environment mode (development, production, test)
NODE_ENV=development

# Base URL for the application (used for PayPal return URLs)
BASE_URL=http://localhost:3000

# =============================================================================
# PAYPAL CONFIGURATION
# =============================================================================

# PayPal mode: 'sandbox' for testing, 'live' for production
PAYPAL_MODE=sandbox

# PayPal Client ID (get from PayPal Developer Dashboard)
PAYPAL_CLIENT_ID=your_paypal_client_id_here

# PayPal Client Secret (get from PayPal Developer Dashboard)
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# PayPal Email (optional, for reference)
PAYPAL_EMAIL=your_paypal_email@example.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# 32-byte encryption key for AES-256-GCM encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_32_byte_encryption_key_in_hex_format

# Allowed CORS origins (comma-separated)
# For development: http://localhost:3000,http://localhost:3001
# For production: https://yourdomain.com,https://app.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate limiting configuration
RATE_LIMIT_WINDOW=60000  # Window in milliseconds (60000 = 1 minute)
RATE_LIMIT_MAX=10        # Maximum requests per window per IP

# Session configuration
SESSION_MAX_AGE=3600000  # Session expiration in milliseconds (3600000 = 1 hour)

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Maximum number of log files to keep
LOG_MAX_FILES=5

# Maximum size of each log file in bytes (5242880 = 5MB)
LOG_MAX_SIZE=5242880

# Enable/disable console logging
LOG_CONSOLE=true

# =============================================================================
# DATABASE CONFIGURATION (if using external database)
# =============================================================================

# Database URL (if using external database for session storage)
# DATABASE_URL=mongodb://localhost:27017/legendo-sync
# DATABASE_URL=postgresql://user:password@localhost:5432/legendo-sync
# DATABASE_URL=redis://localhost:6379

# Database connection pool settings
# DB_POOL_MIN=2
# DB_POOL_MAX=10

# =============================================================================
# MONITORING AND HEALTH CHECK CONFIGURATION
# =============================================================================

# Health check interval in milliseconds
HEALTH_CHECK_INTERVAL=30000

# Enable/disable performance monitoring
PERFORMANCE_MONITORING=true

# Metrics collection endpoint (optional)
# METRICS_ENDPOINT=https://your-monitoring-service.com/metrics

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================

# PayPal webhook endpoint URL (for production use)
# PAYPAL_WEBHOOK_URL=https://yourdomain.com/webhooks/paypal

# Webhook verification (enable in production)
# WEBHOOK_VERIFICATION=true

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache cleanup interval in milliseconds (1800000 = 30 minutes)
CACHE_CLEANUP_INTERVAL=1800000

# Maximum cache size (number of items)
MAX_CACHE_SIZE=1000

# Asset cache TTL in milliseconds (7200000 = 2 hours)
ASSET_CACHE_TTL=7200000

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# AI processing timeout in milliseconds
AI_PROCESSING_TIMEOUT=30000

# Maximum AI input length
AI_MAX_INPUT_LENGTH=10000

# Enable/disable AI command logging
AI_COMMAND_LOGGING=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable debug mode (additional logging and error details)
DEBUG=false

# Enable development middleware (CORS, detailed errors, etc.)
DEV_MODE=true

# Hot reload configuration files
HOT_RELOAD_CONFIG=false

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Enable HTTPS redirect (production only)
# FORCE_HTTPS=true

# SSL certificate paths (if using HTTPS)
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key

# Trust proxy headers (if behind load balancer)
# TRUST_PROXY=true

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Automatic backup interval in milliseconds (86400000 = 24 hours)
# BACKUP_INTERVAL=86400000

# Backup storage location
# BACKUP_PATH=/path/to/backups

# Maximum number of backups to keep
# MAX_BACKUPS=7

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Email configuration for notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# NOTIFICATION_EMAIL=admin@yourdomain.com

# Slack webhook for notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
FEATURE_ASSET_SYNC=true
FEATURE_PAYPAL_INTEGRATION=true
FEATURE_AI_EXECUTION=true
FEATURE_VAULT_SECURITY=true
FEATURE_RATE_LIMITING=true
FEATURE_HEALTH_CHECKS=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# External API endpoints (if integrating with other services)
# EXTERNAL_API_URL=https://api.external-service.com
# EXTERNAL_API_KEY=your-external-api-key

# Third-party service timeouts
# EXTERNAL_SERVICE_TIMEOUT=10000

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test database URL (for running tests)
# TEST_DATABASE_URL=mongodb://localhost:27017/legendo-sync-test

# Enable/disable test mode features
# TEST_MODE=false

# Mock external services in tests
# MOCK_EXTERNAL_SERVICES=true